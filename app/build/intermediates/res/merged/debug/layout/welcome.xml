<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >





    <WebView
        android:id="@+id/welcomeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:background="@color/off_white" >

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottomPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >






        <CheckBox
            android:id="@+id/dontShowBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dontShowClicked"
            android:text="@string/dont_show_welcome" />







        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goOn"
            android:text="@string/start"
            android:textColor="@color/green"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/petroverheles/myfolder/projects/mobile_budget_vp/trunk/app/src/main/res/layout/welcome.xml -->